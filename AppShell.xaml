<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjectMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProjectMaui.View"
    Shell.FlyoutBehavior="Disabled"
    Title="ProjectMaui">

    <ShellContent
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage"
        Shell.NavBarIsVisible="False"
        Shell.TabBarIsVisible="False" />

    <TabBar Route="MainPage">

        <ShellContent
            x:Name="DoctorListTab"
            Title="Bác sĩ"
            ContentTemplate="{DataTemplate local:DoctorListPage}" 
            Route="doctorlist"/>

        <ShellContent
            Title="Lịch hẹn"
            ContentTemplate="{DataTemplate local:AppointmentListPage}" 
            Route="appointmentlist"/>

        <ShellContent
            Title="Cá nhân"
            ContentTemplate="{DataTemplate local:MainPage}" 
            Route="profile"/>

    </TabBar>

</Shell>